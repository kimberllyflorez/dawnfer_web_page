---
interface Props {
	title: string;
	subtitle: string;
	description: string;

}

const {  title, subtitle, description } = Astro.props;
---

<div class="contact">
  
    <div class="container">
        <h2>{title}</h2>
        <form class="form-group">
            <div class="imput" >
                <label for="firstName">First Name:</label>
                <input  id="firstName",
                 placeholder="Enter your first name" required>
            </div>    
            <div class="imput">
                <label >Last Name:</label>
                <input ="lastName"
                 placeholder="Enter your last name" required/>
            </div>
            <div class="imput">
                <label >Phone:</label>
                <input ="lastName"
                 placeholder="Enter your phone" required/>
            </div>
            <div class="imput">
                <label >Comments:</label>
                <textarea rows="4" placeholder="Enter your comments"></textarea>
            </div>
    
            <button >Submit</button>
        </form>
    </div>
   <div class="description-box">
    <div class="description">
        <h1>{subtitle}</h1>
        <p>{description}</p>
    </div>
   </div>
</div>

<div class="map">
    <iframe
    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3312.001922300058!2d151.20458311519984!3d-33.87962478063582!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6b12ae23192f282b%3A0xe170c6f311c7e812!2sAustralian%20College%20of%20Business%20Intelligence!5e0!3m2!1sen!2sus!4v1637991020112!5m2!1sen!2sus"
    allowfullscreen="" loading="lazy">
</iframe>
</div>


<style>
 .contact {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 20px;
    box-sizing: border-box;

} 
.container{
    height: 500px;
    width: 100%;
    max-width: 600px; 
    box-sizing: border-box;
    background-color: white;
    } 
.description{
    height: 480px;
    width: 100%;
    max-width: 600px; 
    box-sizing: border-box;
    color:transparent;
    background:white;
    padding: 10px ;
    border-top-left-radius: 40px;
    border-bottom-right-radius: 40px ;
    background-size: cover;

    } 
    .description-box{
    height: 500px;
    width: 100%;
    max-width: 600px; 
    box-sizing: border-box;
    color:transparent;
    background: linear-gradient(100deg, #A0A69E 0%, white 150%);
    padding: 10px ;
    border-top-left-radius: 40px;
    border-bottom-right-radius: 40px ;
    background-size: cover;
    }
.description h1 {
 justify-content: center;
  color: black;
  font-family: "Koh Santepheap";
  font-size: 22px;
  font-style: bold;
  font-weight: 700;
  line-height: 40px;
  
  }
  .description p {
    color: black;
    font-family: 'Inter';
    font-size: 22px;
    font-style:normal;
    font-weight: 400;
    line-height: 40px;
  }
.map{
    margin: 10px;
    height: 500px;
    max-width: 100%;
    background: linear-gradient(155deg, #E2E2E2 0%, #A0A69E 100%);
    justify-content: center;
    align-content:center;
    width: 100%;
}
.map iframe{
    margin: 10px;
    width: 99%;
    height: 490px;
    border: 0;
}
.form-group {
    justify-content: space-around;
    padding-right: 10px;
    margin-bottom: 15px;
    padding: 10px;

}

.imput{
    display: flex;
    flex-wrap: wrap;
    gap: 0.5;
    width: 100%;
}
.imput label {
    flex: 1 0 1;
   padding: 10px;
    flex-wrap: wrap;
    gap: 0.5;
    width: 100%;
}
.imput input, textarea {
    flex: 1 0 1;
    margin: 10px;
    flex-wrap: wrap;
    gap: 0.5;
    width: 100%;
}
.form-group button {
    flex: 1 0 5;
    padding: 10px;
    margin: 10px;
    width: 50%;
    background: linear-gradient(155deg, #A0A69E 0%, #E2E2E2 150%);
}
.form-group button:hover{
    background: linear-gradient(105deg, #C9D6FF 0%, #E2E2E2 100%);
    padding: 12px;
}
@media screen only (min-width: 600px) {
    .contact {
    flex-direction: column;
    align-items: center;

    } 
    .description h1
    {
      font-size: 8px;
    }
    .form-group {
        display: flex;
        align-items: center;
        background-color: #9B9EAB;
        color: #000;
    }
}
</style>