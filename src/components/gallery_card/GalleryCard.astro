---
interface Props{
imageGallery: string;
}

const { imageGallery} = Astro.props;
---
<div class="card">
<div class=" image-box">
  <img src={imageGallery} alt=""><img/>
</div>
<div class="text-box">
<div class="main"><span>DAWNFER</span></div>
<div class="sub"> <span>@DawmferEventos</span></div>
</div>

</div>
<style>

    .card{
      margin: 10;
        height: 250px;
        width: 400px;
        aspect-ratio: 1/1.3;
        position: relative;
        border-radius: 6px;
        background-color: #A0A69E;
        padding: 6px;
        align-self: center;
    }
    .card .image-box{
        width: 100%;

        height:  100%;
        overflow: hidden;
        border-radius: 6px;

    }
    .card .image-box img{
        display: block;
        width: 100%;
        height:  100%;
       object-fit:cover;
       filter: grayscale(0) brightness(1);
       scale: 1.2;
       transition: scale 2s ease-in-out;
       filter: 2s ease-in-out;
    }
    .card:hover  .image-box img{
          scale: 1;
    }

    .card .text-box{
        position: absolute;
        top: 50%;
        left:50% ;
        transform: translate(40%, 150%);
        text-align: center;
        color: white;
    }
    .text-box :is(.main .sub){
        width: 36px;
        height:  26px;
        overflow: hidden;
    }
    .text-box .main{
        font-size:16px ;
        font-weight: 600;
        text-transform: uppercase;
        position: relative;
    }
    .text-box .sub{
        font-size:12px ;
        font-weight: 300;
        }
      .main span,
      .sub span{
        display: block;
        transition: transform 0.5s ease;
      }  
      .main span{
        transition-delay:0.2s;
        transform: translateY(100%);
      }
      .sub span{
        transition-delay:0.5s;
        transform: translateY(100%);
      }
     .card:hover .text-box :is(span){
        transform: translateY(0%);
      }
      .text-box::after{
        transform: translate(0%);
        content: '';
        top: 50%;
        left:50% ;
        width: 100%;
        height: 3px;
        }
</style>