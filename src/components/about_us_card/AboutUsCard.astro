---
interface Props {
  imageUrl: string;
  title: string;
  message: string;
  isLeft: bool;
}

const { imageUrl, title, message, isLeft } = Astro.props;
---

<div class="container">
	<div class="content">
		{isLeft ? 
			<div class="image-column">
				<img src={imageUrl} alt={imageUrl} />
			</div>
			<div class="text-column">
				<h1>{title}</h1>
				<p>{message}</p>
			</div>
		: 	<div class="text-column">
				<h1>{title}</h1>
				<p>{message}</p>
			</div>
			<div class="image-column">
				<img src={imageUrl} alt={imageUrl} />
			</div>
		}
	</div>
</div>

<style>
  .container {
    position: relative;
    height: 80%;
    width:100% ;
    overflow: hidden;
    margin-top: 14px;
  }

  .content {
    display: flex;
    flex-direction: column;
    align-items: flex-start; 
    margin: 50px;
  }
  
  .text-column{
    height: 50%;
    padding-left: 60px;
    margin-top: 50px;
    width: 100%; 
    border: color 1s #A0A69E; 
    background-color: #A0A69E; 
    padding:  40px;
  }
  
  .text-column h1{
    color: #000;
    font-family: 'Inter';
    font-size: 30px;
    font-style:normal;
    font-weight:bold ;
    font-weight: 400;
    line-height: 68px;
  }
  
  .text-column p{
    font-family: Inria Serif;
    font-size: 28px;
    font-style: normal;
    font-weight: 400;
    line-height: 68px; 
  }

  .text-column > button {
    padding-left: 20px;
    font-family: 'Inter';
    font-size: 24px;
    font-style: normal;
    font-weight: 400;
    line-height: 48px;
    color: #FFF;
    background-color: #000;
  }

  .text-column button:hover {
    background-color: #A0A69E;
  }
  
  .image-column {
    margin-top: 50px;
    padding: 40px;
    border-radius: 3px;
    background-color: FFFF;
  }
  
  .image-column img {
    height: auto;
    border-radius: 8px;
  }
  
  @media screen and (min-width: 768px) {
    .content {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
    }
    
    .text-column,
    .image-column {
      background-color: floralwhite;
    }
  }
</style>