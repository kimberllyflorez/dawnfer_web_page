---
interface Props {
  imageUrl: string;
  title: string;
  message: string;
  buttonLabel: string;
}

const { imageUrl, title, message, buttonLabel} = Astro.props;
---

<div class="container">
  <div class="background"></div>
  <div class="content">
    <div class="text-column">
      <h1>{title}</h1>
      <p>{message}</p>
      <a class="button" href="/dawnfer_web_page/contact">{buttonLabel}</a>
    </div>
    <div class="image-column">
      <img src={imageUrl} alt={imageUrl} />
    </div>
  </div>
</div>

<style>
  .container {
    position: relative;
    height: 80%;
    width:100% ;
    overflow: hidden;
    margin-top: 14px;
  }
  .background {
    position: absolute;
    top: 5%;
    z-index: -1;
    width: 100%;
    height: 50%;
    background-color: #A0A69E;
  }
  .content {
    
    margin: 60px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }
  
  .text-column{
    margin-bottom: 0;
    /* background-color: floralwhite; */
    background-color:#FFF;
    height: 40%;
    padding-left: 60px;
    margin-top: 70px;
    width: 60%; 
    border: color 1s; #A0A69E; 
    padding:  40px;
    border-radius: 3px;
    
  }
  
  .text-column h1{
    color: #000;
    font-family: Inder;
    font-size: 30px;
    font-style:normal;
    font-weight:bold ;
    font-weight: 400;
    line-height: 68px;
  }
  .text-column p{
    
    font-family: Inria Serif;
    font-size: 28px;
    font-style: normal;
    font-weight: 400;
    line-height: 68px; 
  }
  .text-column > button {
    padding-left: 20px;
    font-family: Inder;
    font-size: 24px;
    font-style: normal;
    font-weight: 400;
    line-height: 48px;
    color: #FFF;
    background-color: #000;
  }
  .text-column button:hover {
    background-color:#A0A69E;
  }
  
  .image-column {
    background-color:#FFF;
    
    width: 100%; 
    /* margin: 40px; */
    padding: 40px;
    border-radius: 3px;
  }
  
  .image-column img {
    width: 100%;
    height: auto;
    border-radius: 3px;
  }
  
  @media only screen and (max-width: 600px) {
    .content {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      /* background-color: #A0A69E; */
    }
    .text-column {
      padding: 10px;
      width: 100%; 
      
    }
    
    .text-column h1 {
      font-size: 20px;
      line-height: 30px;
    }
    
    .text-column p {
      font-size: 16px;
      line-height: 24px;
    }
    
    .text-column > button {
      font-size: 16px;
      line-height: 24px;
    }
    /* .text-column, */
    .image-column {
      width: 100%; 
      margin-bottom: 0;
      padding: 16px;
    }
  }
  
  .button {
    display: inline-block;
    padding: 10px 20px;
    font-size: 16px;
    text-align: center;
    text-decoration: none;
    cursor: pointer;
    border: 2px solid #EBF1E8;
    border-radius: 5px;
    background-color: #EBF1E8;
    transition: background-color 0.3s;
  }
  
  /* Hover effect */
  .button:hover {
    background-color: #A0A69E;
  }
  
  /* Active state */
  .button:active {
    background-color: #A0A69E;
  }
  
  /* Disabled state */
  .button:disabled {
    cursor: not-allowed;
    opacity: 0.6;
  }
</style>